---
import { AstroSeo } from "@astrolib/seo";
import { getRelativeUrlByFilePath } from "~/utils/directories.js";
import { SITE } from "~/config.mjs";

const {
	title = SITE.name,
	description = "",
	image: _image,
	noindex = false,
	nofollow = false,
	ogTitle = title,
	ogType = "website",
	appStoreId,
} = Astro.props;

const image =
	typeof _image === "string"
		? new URL(_image, Astro.site)
		: _image && typeof _image.src !== "undefined"
		? new URL(getRelativeUrlByFilePath(_image.src), Astro.site)
		: null;

const canonicalURL = new URL(
	Astro.url.pathname.replace(/\.html$/, ""),
	Astro.site
).toString();
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="author" content="Phureewat Aphibansri" />
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@phureewat29" />
<meta name="twitter:creator" content="@phureewat29" />
<meta name="x-build-time" content={new Date().toUTCString()} />

{
	appStoreId && (
		<meta name="apple-itunes-app" content={`app-id=${appStoreId}`} />
	)
}

<AstroSeo
	title={title}
	description={description}
	canonical={canonicalURL}
	noindex={noindex}
	nofollow={nofollow}
	openGraph={{
		title: ogTitle,
		description,
		url: canonicalURL,
		type: ogType,
		images: image
			? [
					{
						url: image.toString(),
					},
			  ]
			: undefined,
	}}
/>
